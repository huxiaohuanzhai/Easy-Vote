<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-6 text-center mt-5">
            <h1>{{topic.topic}}</h1>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col-6">
            <form action="/topics/{{topic.slug}}" method="post">
                <div class="mb-3">
                    <label for="inputTopic" class="form-label">Option</label>
                    <input type="text" name="option" class="form-control" id="inputOption">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col-6">
            <ul class="list-group">
                {{#each topic.options}}
                <li class="list-group-item">{{answer}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="col"></div>
    </div>
</div>